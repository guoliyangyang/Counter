<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hey.counter.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:hint = "0"
        android:layout_alignParentTop = "true"
        android:layout_alignParentLeft="true"
        android:textStyle="bold"
        android:textSize="60dp"
        android:gravity="right"
        android:maxLines="1"
        android:ellipsize="end"/>

    <Button
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:id = "@+id/button_AC"
        android:text="AC"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text"
        android:textSize="30dp" />

    <Button
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:id = "@+id/button_BACK"
        android:text="BC"
        android:layout_toRightOf="@+id/button_AC"
        android:layout_alignTop="@+id/button_AC"
        android:textSize="30dp" />

    <Button
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:id = "@+id/button_SQUARE"
        android:text="MÂ½"
        android:layout_toRightOf="@+id/button_BACK"
        android:layout_alignTop="@+id/button_BACK"
        android:textSize="30dp" />

    <Button
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:id = "@+id/button_DIVIDE"
        android:text="/"
        android:layout_toRightOf="@+id/button_SQUARE"
        android:layout_alignTop="@+id/button_SQUARE"
        android:textSize="30dp" />

    <Button
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:id="@+id/button_7"
        android:text="7"
        android:layout_alignParentLeft="true"
        android:layout_below = "@+id/button_AC"
        android:textSize="30dp"/>

    <Button
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:id="@+id/button_8"
        android:text="8"
        android:layout_toRightOf="@+id/button_7"
        android:layout_alignTop="@+id/button_7"
        android:textSize="30dp"/>

    <Button
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:id="@+id/button_9"
        android:text="9"
        android:layout_toRightOf="@+id/button_8"
        android:layout_alignTop="@+id/button_8"
        android:textSize="30dp"/>

    <Button
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:id="@+id/button_MUL"
        android:text="*"
        android:layout_toRightOf="@+id/button_9"
        android:layout_alignTop="@+id/button_9"
        android:textSize="30dp"/>

    <Button
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:id="@+id/button_4"
        android:text="4"
        android:layout_alignParentLeft="true"
        android:layout_below = "@+id/button_7"
        android:textSize="30dp"/>

    <Button
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:id="@+id/button_5"
        android:text="5"
        android:layout_toRightOf="@+id/button_4"
        android:layout_alignTop="@+id/button_4"
        android:textSize="30dp"/>

    <Button
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:id="@+id/button_6"
        android:text="6"
        android:layout_toRightOf="@+id/button_5"
        android:layout_alignTop="@+id/button_5"
        android:textSize="30dp"/>

    <Button
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:id="@+id/button_SUBTRACTION"
        android:text="-"
        android:layout_toRightOf="@+id/button_6"
        android:layout_alignTop="@+id/button_6"
        android:textSize="30dp"/>

    <Button
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:id="@+id/button_1"
        android:text="1"
        android:layout_alignParentLeft="true"
        android:layout_below = "@+id/button_4"
        android:textSize="30dp"/>

    <Button
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:id="@+id/button_2"
        android:text="2"
        android:layout_toRightOf="@+id/button_1"
        android:layout_alignTop="@+id/button_1"
        android:textSize="30dp"/>

    <Button
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:id="@+id/button_3"
        android:text="3"
        android:layout_toRightOf="@+id/button_2"
        android:layout_alignTop="@+id/button_2"
        android:textSize="30dp"/>

    <Button
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:id="@+id/button_ADD"
        android:text="+"
        android:layout_toRightOf="@+id/button_3"
        android:layout_alignTop="@+id/button_3"
        android:textSize="30dp"/>

    <Button
        android:layout_width="176dp"
        android:layout_height="75dp"
        android:id="@+id/button_0"
        android:text="0"
        android:layout_alignParentLeft="true"
        android:layout_below = "@+id/button_1"
        android:textSize="30dp"/>

    <Button
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:id="@+id/button_DECIMAL"
        android:text="."
        android:layout_toRightOf="@+id/button_0"
        android:layout_alignTop="@+id/button_0"
        android:textSize="30dp"/>

    <Button
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:id="@+id/button_EQU"
        android:text="="
        android:layout_toRightOf="@+id/button_DECIMAL"
        android:layout_alignTop="@+id/button_DECIMAL"
        android:textSize="30dp"/>

</RelativeLayout>
